<% include ./partials/header %>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('https://www.freewebheaders.com/wordpress/wp-content/gallery/roads/road-through-desert-blog-header.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">A Blog Theme by Start Bootstrap</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">

        <% foundBlogs.forEach((d)=>{ %>
        <div class="post-preview">

          <a href="/blog/<%= d.id %>">
              <img class="img-thumbnail" src="<%= d.comImage %>" alt="blog images" style="width:100px;height:100px">

            <h2 class="post-title">
              <%= d.title%>
            </h2>
            <h3 class="post-subtitle">
              <%= d.comSentence %>
            </h3>
          </a>
          <p class="post-meta">Posted by
            <a href="#">Start Bootstrap</a>
            on <%= d.date %> </p>
        </div>
        <hr>
        <% }) %>
        
       
       
        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>





<% include ./partials/footer %>